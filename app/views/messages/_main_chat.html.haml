.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        sample-group
      .main-header__left-box__member-list
        Member:
        .main-header__left-box__member-list__member
          sample-name
    .main-header__edit
      = link_to edit_group_path(params[:group_id]), class: "main-header__edit__btn" do
        Edit
  .main-message
    .main-message__box
      .main-message__box__upper-info
        .main-message__box__upper-info__talker
          sample-name
        .main-message__box__upper-info__date
          sample-date
      .main-message__box__text
        sample-text
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'image', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'