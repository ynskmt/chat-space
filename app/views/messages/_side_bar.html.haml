.chat-side
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        = link_to new_group_path, class: "side-header__box__menu--edit" do
          = fa_icon 'edit', class: "side-header__box__menu__icon"
        = link_to edit_user_path(current_user), class: "side-header__box__menu__cog" do
          = fa_icon 'cog', class: "side-header__box__menu__icon"
  .side-group
    .side-group__box
      .side-group__box__group-name
        sample-group
      .side-group__box__message
        sample-message