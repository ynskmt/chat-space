.main-message__box{"data-message-id": "#{message.id}"}
  .main-message__box__upper-info
    .main-message__box__upper-info__talker
      = message.user.name
    .main-message__box__upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main-message__box__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?